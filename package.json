{
  "name": "gitlab-mcp-bridge",
  "version": "1.0.0",
  "description": "GitLab MR AI 리뷰 자동화 도구 - Ollama ai-review-model 모델을 사용한 자동 리뷰",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "gitlab",
    "ollama",
    "ai-review",
    "merge-request",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@gitbeaker/node": "^35.8.1",
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "ollama": "^0.5.9"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
